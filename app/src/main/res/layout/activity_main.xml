<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="user"
            type="com.amberllo.databinding.model.User" />

        <variable
            name="order"
            type="com.amberllo.databinding.model.Order" />

        <variable
            name="presenter"
            type="com.amberllo.databinding.presenter.MainPresenter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.firstName}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.lastName}" />

        <Button
            android:onClick="@{(view)-> presenter.changeUser()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变User !"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{order.orderId}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{order.orderName}" />

        <Button
            android:onClick="@{(view)-> presenter.changeOrder()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变Order !"/>

    </LinearLayout>
</layout>